{
  "name": "electron-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=14.15.4"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "watch": "yarn clean; yarn copy-html; tsc --build --force -w",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "rimraf dist && electron-builder",
    "clean": "rimraf build-backend; mkdir build-backend",
    "copy-html": "cp ./src/backend/server-dev.html build-backend/server-dev.html",
    "build": "yarn clean; yarn copy-html; tsc --build --force"
  },
  "build": {
    "appId": "todo-app",
    "productName": "todo-app",
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "dependencies": {
    "@app/shared": "1.0.0",
    "concurrently": "^6.2.0",
    "electron-is-dev": "^1.1.0",
    "node-ipc": "^9.1.1",
    "sharp": "^0.28.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/node-ipc": "^9.1.4",
    "@types/sharp": "^0.28.3",
    "cpx": "^1.5.0",
    "electron": "5.0.4",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.2.0",
    "jest": "^27.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  }
}
